@page "/signin"

<PageTitle>Sign In</PageTitle>

        <div class="container form position-absolute translate-middle start-50 top-50 rounded-2 d-flex justify-content-center"
        style="width: 50%; height: 100%; margin-top: 100px;">
        <div class="row b border-5" style="height: 100%; width: 100%;">
            <!-- LEFT SIDE CONTAINER -->
            <div class="col-md  d-flex justify-content-center" style="border-right: 1px solid  #dce2e6;">
                <div class="text-wrap fw-bolder fs-1 mt-5 rounded-5">
                    <!-- TEXT CONTENT (GET STARTED) -->
                    <div>
                        <div class="mb-0">
                            <p class="text-center" style="width: auto; height: auto; line-height: 30px;">
                                Get <sapn class="text-muted">Started</sapn>
                            </p>
                        </div>
                        <div class="mt-0">
                            <span class="fs-5 fw-light text-muted text-center"
                                style="position: absolute; top: 89px; left: 85px;">with one of these services</span>
                        </div>
                    </div>
                    <!-- OTHER SERVICES BUTTONS  -->
                    <div class="mt-5">
                        <div class="d-flex justify-content-center mt-3">
                            <a href="#">
                                <button class="button btn bg-light hover-5 ">
                                    Sign up with Google
                                </button>
                            </a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="#">
                                <button class="button btn bg-light hover-5 ">
                                    Sign up with Microsoft
                                </button>
                            </a>
                        </div>
                    </div>
                    <!-- OR WITH OTHER SERVICES LINK -->
                    <div class="d-flex justify-content-center">
                        <a href="#" class="text-reset">
                            <span class="display-6"
                                style="text-decoration: underline; font-size: 13px !important; color: #3B3857;">
                                or with other services
                            </span></a>
                    </div>
                </div>
            </div>
            <!-- RIGHT SIDE CONTAINER -->
            <div class="col-md" style="border-left: 1px solid  #dce2e6;">
                <!-- WITH YOUR EMAIL TEXT -->
                <div class="d-flex align-items-center justify-content-center position-relative display-1"
                    style="top: 89px;">
                    <p class="fs-5 text-muted">
                        with your mail address
                    </p>
                </div>
                <!-- FORM TEXTBOXES -->
                <div>
                    <div class="form-outline position-relative d-flex justify-content-center"
                        style="top: 113px; width: 265px !important; left: 40px; margin-bottom: 30px">
                        <input class="form-control" id="formControlReadonly" type="text"
                            aria-label="readonly input example" />
                        <label class="form-label" for="formControlReadonly">Full name</label>
                    </div>

                    <div class="form-outline position-relative d-flex justify-content-center"
                        style="top: 113px; width: 265px !important; left: 40px;">
                        <input class="form-control" id="formControlReadonly" type="email"
                            aria-label="readonly input example" />
                        <label class="form-label" for="formControlReadonly">Work Email</label>
                    </div>

                    <div class="form-outline position-relative d-flex justify-content-center"
                        style="top: 113px; width: 265px !important; left: 40px; margin-top: 30px">
                        <input class="form-control" id="formControlReadonly" type="password"
                            aria-label="readonly input example" />
                        <label class="form-label" for="formControlReadonly">Password</label>
                    </div>
                </div>
                <!-- CHECK BOXES -->
                <div class="position-relative" style="top: 140px; left: 40px;">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" style="font-size: 14px; width: 220px;" for="flexCheckDefault">
                            I agree to the <a href="#">Terms</a> and <a href="#">Privacy Policy</a>
                        </label>
                    </div>
                    <div class="position-relative" style="top: 20px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                            <label class="form-check-label" style="font-size: 14px; width: 220px;"
                                for="flexCheckDefault">
                                I agree to receive periodic product updates, offers, and promotions
                            </label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center position-relative" style="top: 200px;">
                    <a href="/verify">
                        <button class="btn bg-primary fs-6 display-2 text-light" style="width: 100%; height: 48px !important;">
                            Sign Up
                        </button>
                    </a>
                </div>
            </div>
            <!-- ALREADY HAVE AN ACCOUNT LINK -->
            <div class="d-flex justify-content-center" style="margin-top: 20px !important;">
                <a href="#" class="text-reset">
                    <span class=" display-6"
                    style="text-decoration: underline; font-size: 13px !important; color: #3B3857;">
                    i already have an account
                    </span>
                </a>
            </div>
            <!-- OR BUTTON -->
            <div class="d-flex justify-content-center position-absolute" style="top: 10%;">
                <a href="#">
                    <button class="btn rounded-circle" style="height: 70px; background-color: #dce2e6;">
                        <span class="fs-3 text-center text-light display-1">
                            or
                        </span>
                    </button>
                </a>
            </div>
        </div>
    </div>

